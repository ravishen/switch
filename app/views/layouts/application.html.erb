<!DOCTYPE html>
<html>
  <head>
    <title>Test01</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <header class="navbar navbar-fixed-top navbar-default ">
    <div class="container-fluid ">

      <div class="navitem ">
        <ul  style="  list-style-type: none;">
        <li ><%= link_to "SWITCHED", "", class:"btn btn-info", id: "logo" %>
      </div></li>
      <div class="navitem ">

        <% if user_signed_in? %>
       <li style="float: right"><%= link_to "Log Out",  "/users/sign_out" , class:"btn btn-primary ", id: "logout", method: :delete %></li>

      <% else%>
      <li style="float: right"> <%= link_to "Log In",  "/users/sign_in" , class:"btn btn-primary ", id: "login" %></li>
            <%end%>
      </div>
        <div class="navitem">
     <li style="float: right"> <%= link_to "HOME", "/home", class:"btn btn-primary ", id: "home" %> </li>
    </div>
      <div class="navitem ">
        <li style="float: right">
        <%= link_to "KillSwitch", "", class:"btn btn-primary", id: "killswitch" %>
        </li>
      </div>
      <div class="navitem ">
        <li style="float: right"><%= link_to "Setup", "", class:"btn btn-primary ", id: "setup" %>
        </li>
          </ul>
      </div>

      </div>
  </header>

  <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
  <% end %>
    <%= yield %>

  <footer>
    <br>
    <br>

    <hr style="border: none; border-bottom: 1px solid grey ;">

    <h5 style="text-align: center">	&copy; Switch Inc.  @2017</h5>


  </footer>
  </body>


</html>
